extend base.pug
block script 
    script (src='/static/index.js')

block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content 
    div.container2
        h3 Contact us
        form(action="/contact", method="post",class="myform")
            input(type="text", class="myInput", name="name", placeholder="enter your name",require)

            input(type="number", class="myInput", name="phone", placeholder="enter your phone",require)
            
            input(type="email", class="myInput", name="email", placeholder="enter your email",require)
            
            input(type="password", class="myInput", name="password", placeholder="enter password",require)
            
            input(type="text", class="myInput", name="desc", placeholder="enter your desc")

            button(class="btn")
                | Submit